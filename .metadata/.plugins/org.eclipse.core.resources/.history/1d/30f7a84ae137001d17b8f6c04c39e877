package _20220919;

import java.util.Scanner;

public class Factorial {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		long fact = 1;
		long n;
		
		System.out.print("정수를 입력하시오: ");
		n = scanner.nextLong();
		
		for (int i = 1; i <= n; i++) {
			fact *= i; 
		}
		
		System.out.printf("%d!은 %d입니다.\n", n, fact);
	}

}
